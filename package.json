{
  "name": "sdm-secure-system",
  "version": "3.0.0",
  "description": "World's Most Secure Transaction Processing System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "NODE_ENV=development nodemon index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "test": "jest --coverage",
    "test:security": "node security-tests.js",
    "audit": "npm audit --production --audit-level=critical",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "backup": "node scripts/backup.js",
    "monitor": "node scripts/monitor.js"
  },
  "keywords": [
    "security",
    "encryption",
    "blockchain",
    "fraud-detection",
    "banking",
    "fintech"
  ],
  "author": "SDM Security Team",
  "license": "Proprietary",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "firebase-admin": "^11.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "node-rsa": "^1.1.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "geoip-lite": "^1.4.7",
    "useragent": "^2.3.0",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cron": "^3.0.2",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.2",
    "socket.io-redis": "^6.1.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "validator": "^13.9.0",
    "rate-limiter-flexible": "^2.4.2",
    "node-cache": "^5.1.2",
    "prom-client": "^14.2.0",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.0.3",
    "@types/node": "^20.6.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/cors": "^2.8.15",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nyc": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}

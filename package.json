{
  "name": "telegram-smart-exam-bot",
  "version": "2.0.0",
  "description": "Telegram bot with AI-powered exam generation and smart text analysis",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install && npm run setup-env",
    "setup-env": "node -e \"console.log('\\n=== إعداد ملف البيئة ===\\n'); const fs = require('fs'); if(!fs.existsSync('.env')) { fs.writeFileSync('.env', 'TELEGRAM_BOT_TOKEN=your_bot_token_here\\nSTORAGE_CHANNEL_ID=-100\\nADMIN_ID=your_admin_id\\nPORT=3000\\nNODE_ENV=production\\n'); console.log('✓ تم إنشاء ملف .env'); } else { console.log('✓ ملف .env موجود بالفعل'); }\"",
    "docker:build": "docker build -t smart-exam-bot .",
    "docker:run": "docker run -d --name smart-exam-bot --env-file .env -p 3000:3000 smart-exam-bot",
    "deploy": "npm run lint && npm test && npm start",
    "debug": "node --inspect index.js",
    "backup": "node backup.js",
    "stats": "node stats.js",
    "update": "npm update --save",
    "security-check": "npm audit",
    "format": "prettier --write '**/*.js'",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "exam",
    "education",
    "smart",
    "arabic",
    "ocr",
    "pdf",
    "learning"
  ],
  "author": "Smart Exam Bot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/smart-exam-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/smart-exam-bot/issues"
  },
  "homepage": "https://github.com/yourusername/smart-exam-bot#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "telegraf": "^4.12.2",
    "axios": "^1.6.2",
    "tesseract.js": "^4.0.3",
    "pdfkit": "^0.14.0",
    "canvas": "^2.11.2",
    "sharp": "^0.33.1",
    "natural": "^6.6.0",
    "compromise": "^14.11.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "bull": "^4.11.5",
    "socket.io": "^4.7.2",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "moment-hijri": "^2.1.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "rate-limiter-flexible": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run test"
    }
  },
  "files": [
    "index.js",
    "README.md",
    "LICENSE",
    "package.json",
    "package-lock.json",
    ".env.example",
    "Dockerfile",
    "docker-compose.yml",
    "docs/",
    "test/",
    "src/",
    "config/",
    "utils/",
    "middlewares/"
  ],
  "directories": {
    "test": "test",
    "src": "src",
    "config": "config",
    "utils": "utils",
    "docs": "docs",
    "logs": "logs"
  },
  "contributors": [
    {
      "name": "Smart Exam Bot Team",
      "email": "team@smartexambot.com"
    }
  ],
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/smartexambot"
  }
}
